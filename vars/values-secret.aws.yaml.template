secrets:

  - name: aws
    fields:
    - name: aws_access_key_id
      ini_file: $HOME/.aws/credentials
      ini_key: aws_access_key_id
    - name: aws_secret_access_key
      ini_file:  $HOME/.aws/credentials
      ini_key: aws_secret_access_key
